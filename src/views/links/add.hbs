<title>Agregar Producto</title>
<br><br><br><br>
<style>
    footer{
        position: relative !important;
        top: 109px !important;
    }
</style>
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card ">
                <div class="card-body">
                    <form action="/links/add" method="POST" enctype="multipart/form-data">
                        <div class="form-group mb-3">
                            <input type="text" class="form-control" name="title" placeholder="Nombre" autofocus >
                        </div>
                        <div class="form-group mb-3">
                            <input type="number" name="url" class="form-control" placeholder="Precio">
                        </div>
                        <div class="form-group mb-3"> {{!-- mb-3 es un margin bottom; 3px  --}}
                            <textarea name="description"  rows="4"  class="form-control" placeholder="Descripcion"></textarea>
                        </div> 
                        
                        <div class="form-group mb-3">
                            <input type="file" class="form-control" name="sampleFile"  accept="image/*"/>
                        </div>
                        <div class="form-group text-center"> {{!-- text-center podemos centar lo que hay dentro del div --}}
                            <button type="submit" class="btn btn-success">
                               <i class="fas fa-save"></i> Guardar
                            </button>
                        </div>
                    </form> 
                </div>
            </div>
        </div>
    </div>
</div>